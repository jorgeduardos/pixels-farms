

<!-- 1. The dialog container -->
<div id="{{ modal }}" class="dialog-container {{ modal }}" aria-labelledby="popup-title-{{ modal }}" aria-hidden="true" {% if autoloading %}data-a11y-dialog="{{ modal }}"{% endif %}>
  <!-- 2. The dialog overlay -->
  <div class="dialog-overlay" data-a11y-dialog-hide></div>
  <!-- 3. The actual dialog -->
  <div class="dialog-content" role="document">
    <!-- 4. The close button -->
    <button class="close-popup" type="button" data-a11y-dialog-hide aria-label="Close dialog">
     {% include "fragments/svg/close-icon" %}
    </button>
    <!-- 5. The dialog title -->
    {% if heading is not empty %}
    <h1 id="popup-title-{{ modal }}" class="popup-header h3">{{ heading }}</h1>
    {% endif %}

    <!-- 6. Dialog content -->
    {% if content is not empty %}
      <div class="content">
        {{ content }}
      </div>
    {% endif %}
  </div>
</div>